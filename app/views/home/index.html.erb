<h1>Query BLS Data</h1>
<p>Enter series id:</p>
<%= form_tag("/home") do %>
  <%= select_tag(:area_code, options_for_select(@area_codes)) %><br/><br/>
  <%= select_tag(:datatype, options_for_select(@data_types)) %><br/><br/>
  <%= select_tag(:industry, options_for_select(@industries)) %><br/><br/>
  <%= select_tag(:ownership, options_for_select(@ownership)) %><br/><br/>
  <%= select_tag(:size, options_for_select(@sizes)) %><br/>
  <%= text_field_tag(:series_id) %>
  <%= submit_tag("submit") %>
<% end %>
<%= form_tag("/download_csv") do %>
  <%= submit_tag("Download") %>
<% end %>
<% if !@reply.nil? %>
  <%= @reply['status'] %><br/>
  <% if @reply['message'].present? %><br/>
    <% for message in @reply['message'] %>
      <%= message %><br />
    <% end %>
  <% end %>
  <% if !@reply['Results']['series'][0]['data'].blank? %>
  <table class="table">
  <thead>
  <% for col in @reply['Results']['series'][0]['data'][0] %>
    <% if col[0] != "latest"%>
    <th><%= col[0] %></th>
    <% end %>
  <% end %>
  </thead>
  <% for item in @reply['Results']['series'][0]['data'] %>
    <tr>
    <% for col in item %>
      <% if col[0] == "latest" %>
        <% next %>
      <% end %>
      
      <td>
        <% if col[0] == "footnotes" %>
          <%= col[1][0]["text"] %>
        <% else %>
          <%= col[1] %>
        <% end %>
      </td>
    <% end %>
    </tr>
  <% end %>
  </table>
  <% end %>
<% end %>