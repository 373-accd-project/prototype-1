<%= form_tag("/home") do %>
  <%= select_tag(:area_code, options_for_select(@area_codes)) %><br/><br/>
  <%= select_tag(:datatype, options_for_select(@data_types)) %><br/><br/>
  <%= select_tag(:industry, options_for_select(@industries)) %><br/><br/>
  <%= select_tag(:ownership, options_for_select(@ownership)) %><br/><br/>
  <%= select_tag(:size, options_for_select(@sizes)) %><br/>
  <%= text_field_tag(:year) %>
  <%= submit_tag("submit") %>
<% end %>
<%= form_tag("/download_csv") do %>
  <%= submit_tag("Download") %>
<% end %>